.login-main
  width: 100%;
  height: 100%;
  position relative;
  bg('bj.png');
  background-color: #0C0329

  .login-header
    width 100%
    height .8rem
    padding-bottom .1rem
    bg('login-header.png')

    .title
      height 100%
      width: 18%;
      margin-left: 2%;
      bg-contain('title.png')

  .animate
    position: absolute
    width: 3.5rem;
    height: 5.6rem;
    top 25%
    left 25%
    bg('animate.png')
    filter saturate(2)

  .login-form
    width: 3.84rem;
    height: 4.57rem;
    min-width: 300px;
    min-height: 370px;
    position: absolute;
    padding: 1rem .3rem .3rem;
    left 60%
    top 25%
    bg('login-bg.png')
    // padding: 110px 80px;
      
    .login-title
      font-size: .24rem;
      margin: .2rem 0;
      color #D2EFFF

    .form-con
      width: 100%;

      .has-error

        .ant-input-prefix
          color: rgba(245, 34, 45, .8);

        .ant-form-explain
          color: rgba(245, 34, 45, .8);

        .placerholder-color
          color: rgba(245, 34, 45, .6);

        .ant-input
          background-color: rgba(245, 34, 45, .2);

          &:focus
            box-shadow: none;

      .ant-input-prefix
        color: rgba(255,255,255,0.6);
      
      .ant-input
        background-color: rgba(41, 157, 242, .14);
        color: rgba(255, 255, 255, .6);
        border-radius: 1px;
        border: 0;
        height .4rem;
        border-bottom: 1px solid #134d95;
        border-top-left-radius: 5px;
        border-top-right-radius: 5px;

        &:focus
          box-shadow: none;

        &::placeholder
          color: rgba(255, 255, 255, .4);
      
      .forgot-box
        .ant-checkbox-wrapper
          .ant-checkbox
            .ant-checkbox-inner
              // background-color: transparent;
              // border: 1px solid #809EB3;
          
          & > span
            &:last-child
              color: rgba(255,255,255,0.6);
      
      .sub-box
        width: 100%;
        height .4rem;
        display: flex;
        align-items: center;
        justify-content: space-between;

        .ant-btn
          width:100%;
          height .4rem;
          // background-color: transparent;
          border: 0;

          &[ant-click-animating-without-extra-node='true']
            &::after
              box-shadow: none;
              opacity: 0;

          & > span 
            font-size: .2rem;

          