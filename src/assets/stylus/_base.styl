 /* 滚动槽 */
 ::-webkit-scrollbar-track {
    border-radius:8px;
    background-color: #041c3f;
  }
 /* 设置滚动条的样式 */
 ::-webkit-scrollbar {
  width:8px;
  background-color: transparent;
  }
   /* 滚动条滑块 */
   ::-webkit-scrollbar-thumb {
    border-radius:10px;
    background:rgba(47, 99, 172, 0.7);
    }

ellipsis_num(line)
  display: -webkit-box;
  -webkit-line-clamp: line;
  -webkit-box-orient: vertical;
  overflow: hidden;

.text-ellipsis
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;