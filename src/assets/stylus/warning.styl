.add-modal
  .form-input
    display: flex;
    align-items: center;
    justify-content space-around;
    margin-bottom: .1rem;
  
    & > label
      width .9rem;
      font-size: .12rem;
      color: rgba(255, 255, 255, .8);

    & > .ant-input
      width: calc(100% - 1.1rem);

.detail-modal
  .ant-modal-footer
    display: none;

.action
  a
    margin-right: .1rem; 

.bar-btn
  bg('area-button-normal.png')
  color: rgba(255, 255, 255, .8);
  width: 1.2rem;
  height: 0.36rem;
  line-height: .36rem;
  text-align: center;
  font-size: 0.2rem;
  cursor: pointer

.click-btn
  bg('area-button-focus.png')